@model F1.Models.User_login


@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Verify", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Login</title>
        <style>
            -->
            #login-div {
                position: absolute;
                left: 40%;
                top: 30%;
                border-style: outset;
                border-width: 7px;
                border-color: coral;
                padding: 20px 20px;
                background-color: white;
            }

            #login-btn {
                width: 100px;
                height: 30px;
                border: none;
                padding: 2px;
                border-radius: 15px;
                color: white;
                background-color: rgb(38, 189, 103);
                text-align: center;
                font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            }

            body {
                margin: 0;
                padding: 0;
                font-family: 'Arial';
                background-image: url();
                background-repeat: no-repeat;
                /* background-image: url('../../images/back.jpeg');*/

                background-image: url('../../Photos/h28.jpg');
                background-attachment: scroll;
                background-size: cover;
                background-position: center;
                height: 740px;
                border: none;
            }

            td {
                padding: 5px;
            }

            .field-validation-error {
                color: red;
            }

            .forgot-password {
                text-align: center;
                float: right;
                font-size: 15px;
                padding: 10px;
                padding-right: 120px;
                font-family: 'Times New Roman', Times, serif;
                font-size: medium;
                border-radius: 15px;
            }

            a {
                color: deepskyblue;
                display: inline-block;
            }

            button {
                padding: 2px;
                border-radius: 2px;
                background-color: white;
            }
        </style>

    </head>

    <div class="form-horizontal" style="margin-top : 10%">
        <h4>Login</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.User_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.User_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.User_Name, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group-2">
            <label class="error">@Html.DisplayFor(model => model.LoginErrorMsg)</label>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
    </div>}

<script src="~/Scripts/jquery-1.8.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
