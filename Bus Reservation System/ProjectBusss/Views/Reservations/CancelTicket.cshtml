@model ProjectBusss.Models.Ticket

@{
    ViewBag.Title = "Cancel a Ticket";
}


<h2>Cancel Ticket</h2>
@if (Model.dateOfJourney.CompareTo(DateTime.Today) <= 0)
{
    <br />
    <div>Cannot cancel because of travel date. please check the terms and conditions of cancellation</div>
    <br />
    @Html.ActionLink("Back to Booking History", "Index")

}
else
{

    <h3>Are you sure you want to cancel this ticket?</h3>
    <div>
        <h4>Ticket</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Bus.BusName)
