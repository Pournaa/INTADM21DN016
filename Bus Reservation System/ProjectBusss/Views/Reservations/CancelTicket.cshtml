        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Confirm Cancellation" class="btn btn-default" />
                @Html.ActionLink("Back to Booking History", "Index")
            </div>
        }
    </div>
}